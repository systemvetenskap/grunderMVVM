<UserControl x:Class="Yatzy.Views.DiceControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Yatzy.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" x:Name="diceControl">
    <Grid>
        <!-- Visuellt utseende för tärningen -->
        <Border BorderBrush="Black" BorderThickness="2" CornerRadius="10">
            <TextBlock x:Name="DiceValueTextBlock"
                       Text="{Binding DiceValue, ElementName=diceControl}"  
                       FontSize="36" HorizontalAlignment="Center" VerticalAlignment="Center" />
        </Border>
    </Grid>
</UserControl>
